    {
      "name": "data_questions",
      "source": "source_questions",
      "transform": [
        {
          "type": "formula",
          "expr": "toNumber(datum[\"percentage\"])",
          "as": "percentage"
        },
        {
          "type": "formula",
          "expr": "datum.type === 'Strongly disagree' ? -2 : datum.type === 'Disagree' ? -1 : datum.type === 'Neither agree nor disagree' ? 0 : datum.type === 'Agree' ? 1 : 2",
          "as": "type_index",
          "initonly": true
        },
        {
          "type": "formula",
          "expr": "if(datum.type === 'Disagree' || datum.type === 'Strongly disagree', datum.percentage,0) + if(datum.type === 'Neither agree nor disagree', datum.percentage / 2, 0)",
          "as": "signed_percentage"
        },
        {
          "type": "window",
          "groupby": ["question"],
          "ops": ["sum"],
          "fields": ["signed_percentage"],
          "frame": [null, null],
          "as": ["offset"]
        },
        {
          "type": "aggregate",
          "groupby": [
            "question",
            "type",
            "offset"
          ],
          "ops": [
            "sum"
          ],
          "fields": [
            "percentage"
          ],
          "as": [
            "sum_percentage"
          ]
        },
        {
          "type": "stack",
          "groupby": [
            "question"
          ],
          "field": "sum_percentage",
          "sort": {
            "field": [
              "type_index"
            ],
            "order": [
              "descending"
            ]
          },
          "as": [
            "sum_percentage_start",
            "sum_percentage_end"
          ],
          "offset": "zero"
        },
        {
          "type": "formula",
          "expr": "datum.sum_percentage_start - datum.offset",
          "as": "sum_percentage_start"
        },
        {
          "type": "formula",
          "expr": "datum.sum_percentage_end - datum.offset",
          "as": "sum_percentage_end"
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "width",
      "update": "200"
    },
    {
      "name": "y_step",
      "value": 21
    },
    {
      "name": "height",
      "update": "bandspace(domain('y').length, 0.1, 0.05) * y_step"
    }
  ],
  "marks": [
    {
      "name": "marks",
      "type": "rect",
      "style": [
        "bar"
      ],
      "from": {
        "data": "data_questions"
      },
      "encode": {
        "update": {
          "x": {
            "scale": "x",
            "field": "sum_percentage_end"
          },
          "x2": {
            "scale": "x",
            "field": "sum_percentage_start"
          },
          "y": {
            "scale": "y",
            "field": "question"
          },
          "height": {
            "scale": "y",
            "band": true
          },
          "fill": {
            "scale": "color",
            "field": "type"
          }
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": {
        "data": "data_questions",
        "fields": [
          "sum_percentage_start",
          "sum_percentage_end"
        ],
        "sort": true
      },
      "range": [
        0,
        {
          "signal": "width"
        }
      ],
      "nice": true,
      "zero": true
    },
    {
      "name": "y",
      "type": "band",
      "domain": {
        "data": "data_questions",
        "field": "question",
        "sort": true
      },
      "range": {
        "step": {
          "signal": "y_step"
        }
      },
      "paddingInner": 0.1,
      "paddingOuter": 0.05
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": [
        "Strongly disagree",
        "Disagree",
        "Neither agree nor disagree",
        "Agree",
        "Strongly agree"
      ],
      "range": [
        "#c30d24",
        "#f3a583",
        "#cccccc",
        "#94c6da",
        "#1770ab"
      ]
    }
  ],
  "axes": [
    {
      "title": "Percentage",
      "scale": "x",
      "labelOverlap": true,
      "orient": "bottom",
      "tickCount": {
        "signal": "ceil(width/40)"
      },
      "zindex": 1
    },
    {
      "scale": "x",
      "domain": false,
      "grid": true,
      "labels": false,
      "maxExtent": 0,
      "minExtent": 0,
      "orient": "bottom",
      "tickCount": {
        "signal": "ceil(width/40)"
      },
      "ticks": false,
      "zindex": 0,
      "gridScale": "y"
    },
    {
      "domain": false,
      "minExtent": 60,
      "offset": 5,
      "ticks": false,
      "title": "Question",
      "scale": "y",
      "orient": "left",
      "zindex": 1
    }
  ],
  "legends": [
    {
      "title": "Response",
      "fill": "color",
      "encode": {
        "symbols": {
          "update": {
